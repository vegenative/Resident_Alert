<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ResetPasswordActivity">
    <LinearLayout
        android:id="@+id/lign_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="390dp"
        android:layout_height="312dp"
        app:srcCompat="@drawable/logo_miasto" />

        <TextView
            android:id="@+id/resetPasswordInfo_tv"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/staatliches_font"
            android:text="@string/resetPasswordInfo"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/login_textSize" />

        <LinearLayout
            android:id="@+id/phoneVerification_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phone_tv"
                    android:layout_width="165dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/staatliches_font"
                    android:gravity="center"
                    android:text="@string/phone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_textSize" />

                <com.hbb20.CountryCodePicker
                    android:id="@+id/countryCodePickerResetPassword"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_showFlag="true"
                    app:ccp_showNameCode="true">

                </com.hbb20.CountryCodePicker>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/resetPassword_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/round_et"
                    android:drawableStart="@drawable/dogtag_icon"
                    android:ems="10"
                    android:fontFamily="@font/staatliches_font"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:textColorHint="@color/colorGray"
                    android:textSize="@dimen/login_textSize" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/login_btn"
                    android:fontFamily="@font/staatliches_font"
                    android:onClick="goBack"
                    android:text="@string/back"
                    android:textColor="@color/colorWhiteLight"
                    android:textSize="@dimen/login_textSize"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/next_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/login_btn"
                    android:fontFamily="@font/staatliches_font"
                    android:onClick="goNext"
                    android:text="@string/Next"
                    android:textColor="@color/colorWhiteLight"
                    android:textSize="@dimen/login_textSize"
                    tools:visibility="visible" />
            </LinearLayout>
            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                tools:visibility="visible" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/changePassword_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/password_tv"
                    android:layout_width="103dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/staatliches_font"
                    android:gravity="center_horizontal|top"
                    android:text="@string/newPassword"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_textSize" />

                <EditText
                    android:id="@+id/changePassword_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_et"
                    android:drawableStart="@drawable/password_icon"
                    android:ems="10"
                    android:fontFamily="@font/staatliches_font"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:textColorHint="@color/colorGray"
                    android:textSize="@dimen/login_textSize" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cnfPassword_tv"
                    android:layout_width="162dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/staatliches_font"
                    android:gravity="center_horizontal|top"
                    android:text="@string/confirmNewPassword"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_textSize" />
                <EditText
                    android:id="@+id/cnfChangePassword_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_et"
                    android:drawableStart="@drawable/password_icon"
                    android:ems="10"
                    android:fontFamily="@font/staatliches_font"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:textColorHint="@color/colorGray"
                    android:textSize="@dimen/login_textSize" />
            </LinearLayout>

            <Button
                android:id="@+id/acceptChanges_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btn"
                android:fontFamily="@font/staatliches_font"
                android:onClick="saveNewData"
                android:text="@string/save"
                android:textColor="@color/colorWhiteLight"
                android:textSize="@dimen/login_textSize" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>