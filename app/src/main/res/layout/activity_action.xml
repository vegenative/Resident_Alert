<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActionActivity">
    <ScrollView
        android:layout_width="410dp"
        android:layout_height="612dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeText">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button

                    android:id="@+id/bathroomButton"
                    android:layout_width="200dp"
                    android:layout_height="168dp"
                    android:text="Instalatorskie" />

                <Button
                    android:id="@+id/kitchenButton"
                    android:layout_width="174dp"
                    android:layout_height="match_parent"
                    android:text="Elektryczne" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/salonButton"
                    android:layout_width="210dp"
                    android:layout_height="168dp"
                    android:text="Gazowe" />

                <Button
                    android:id="@+id/corridorButton"
                    android:layout_width="200dp"
                    android:layout_height="168dp"
                    android:text="Wodne" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/cellarButton"
                    android:layout_width="210dp"
                    android:layout_height="168dp"
                    android:text="Kominiarskie" />

                <Button
                    android:id="@+id/staircaseButton"
                    android:layout_width="200dp"
                    android:layout_height="168dp"
                    android:text="Szklarskie" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/garageButton"
                    android:layout_width="210dp"
                    android:layout_height="168dp"
                    android:text="Gazowe" />

                <Button
                    android:id="@+id/gardenButton"
                    android:layout_width="200dp"
                    android:layout_height="168dp"
                    android:text="Å›lusarskie" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <TextView
        android:id="@+id/placeText"
        android:layout_width="239dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="Jakiego rodzaju jest usterka?"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>