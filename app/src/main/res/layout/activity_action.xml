<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ActionActivity">
    <ScrollView
        android:layout_width="410dp"
        android:layout_height="612dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeText">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button

                    android:id="@+id/installButton"
                    android:layout_width="200dp"
                    android:layout_height="168dp"
                    android:text="Instalatorskie"
                    android:background="@drawable/sketch_button"
                    android:textColor="#FFF"/>

                <Button
                    android:id="@+id/electricButton"
                    android:layout_width="174dp"
                    android:layout_height="match_parent"
                    android:text="Elektryczne"
                    android:background="@drawable/sketch_button"
                    android:textColor="#FFF" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/gasButton"
                    android:layout_width="210dp"
                    android:layout_height="168dp"
                    android:text="Gazowe"
                    android:background="@drawable/sketch_button"
                    android:textColor="#FFF" />

                <Button
                    android:id="@+id/waterButton"
                    android:layout_width="200dp"
                    android:layout_height="168dp"
                    android:text="Wodne"
                    android:background="@drawable/sketch_button"
                    android:textColor="#FFF" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/cominButton"
                    android:layout_width="210dp"
                    android:layout_height="168dp"
                    android:text="Kominiarskie"
                    android:background="@drawable/sketch_button"
                    android:textColor="#FFF" />

                <Button
                    android:id="@+id/glassButton"
                    android:layout_width="200dp"
                    android:layout_height="168dp"
                    android:text="Szklarskie"
                    android:background="@drawable/sketch_button"
                    android:textColor="#FFF" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/decarButton"
                    android:layout_width="210dp"
                    android:layout_height="168dp"
                    android:text="dekarskie"
                    android:background="@drawable/sketch_button"
                    android:textColor="#FFF"/>

                <Button
                    android:id="@+id/lockButton"
                    android:layout_width="200dp"
                    android:layout_height="168dp"
                    android:text="Å›lusarskie"
                    android:background="@drawable/sketch_button"
                    android:textColor="#FFF"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/constructionButton"
                    android:layout_width="210dp"
                    android:layout_height="168dp"
                    android:text="Budowlaane"
                    android:background="@drawable/sketch_button"
                    android:textColor="#FFF"/>

                <Button
                    android:id="@+id/carpentryButton"
                    android:layout_width="200dp"
                    android:layout_height="168dp"
                    android:text="Stolarskie"
                    android:background="@drawable/sketch_button"
                    android:textColor="#FFF"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/disifectionButton"
                    android:layout_width="210dp"
                    android:layout_height="168dp"
                    android:text="Dezynfekcja"
                    android:background="@drawable/sketch_button"
                    android:textColor="#FFF" />

                <Button
                    android:id="@+id/cleanButton"
                    android:layout_width="200dp"
                    android:layout_height="168dp"
                    android:text="Sprzatanie"
                    android:background="@drawable/sketch_button"
                    android:textColor="#FFF" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/otherButton"
                    android:layout_width="210dp"
                    android:layout_height="168dp"
                    android:text="Inne"
                    android:background="@drawable/sketch_button"
                    android:textColor="#FFF" />

                <Button
                    android:id="@+id/infoButton"
                    android:layout_width="200dp"
                    android:layout_height="168dp"
                    android:text="Informacyjne"
                    android:background="@drawable/sketch_button"
                    android:textColor="#FFF"/>
            </TableRow>
        </TableLayout>
    </ScrollView>

    <TextView
        android:id="@+id/placeText"
        android:layout_width="239dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="Jakiego rodzaju jest usterka?"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>