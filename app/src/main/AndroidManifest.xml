<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.resident_alert">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.LoginActivity"/>
        <activity android:name=".activities.ResetPasswordActivity"/>
        <activity android:name=".activities.SmsVerificationActivity" />
        <activity android:name=".activities.SignInActivity" />
        <activity android:name=".activities.MenuActivity" />
        <activity android:name=".activities.CompleteActivity"/>
        <activity android:name=".activities.SignUpActivity" />

        <activity android:name=".activities.ActionActivity"/>
        <activity android:name=".activities.PlaceActivity" />
        <activity android:name=".activities.StartActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>